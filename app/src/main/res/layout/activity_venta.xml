            android:id="@+id/tvwNumero"
            android:textSize="28sp" />

        <EditText
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/txtNumero"
            android:maxLength="5"
            android:textSize="28sp"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tvwSpace12"
            android:text="                      "
            android:textSize="28sp" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=" 1 Lugar:  "
            android:textSize="28sp"
            android:id="@+id/tvwLugar1" />

        <EditText
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtLugar1"
            android:textSize="28sp"
            android:maxLength="5" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="15dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tvwSpace4"
            android:textSize="28sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tvwTotal"
            android:text="             Total: "
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtTotal"
            android:text="0"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=" 2 Lugar:  "
            android:id="@+id/tvwLugar2"
            android:textSize="28sp" />

        <EditText
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/txtLugar2"
            android:textSize="28sp"
            android:maxLength="5"
            android:inputType="number" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="15dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tvwSpace5"
            android:textSize="28sp" />

        <Button
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="Limpiar"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:id="@+id/btnLimpiar"
            android:background="@android:drawable/btn_default" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tvwSpace3"
            android:textSize="28sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=" 3 Lugar:  "
            android:id="@+id/tvwLugar3"
            android:textSize="28sp" />

        <EditText
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/txtLugar3"
            android:maxLength="5"
            android:textSize="28sp"
            android:inputType="number" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="15dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tvwSpace14"
            android:textSize="28sp" />
        <Button
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="Agregar"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:id="@+id/btnAgregar"
            android:background="@android:drawable/btn_default" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
