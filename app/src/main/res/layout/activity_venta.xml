            android:layout_height="70dp"
            android:width="95dp"
            android:inputType="text"
            android:text="       ID"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvwEncNum"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:width="95dp"
            android:inputType="text"
            android:text="Numero"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvwEncUno"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:width="95dp"
            android:inputType="text"
            android:text="Primero"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvwEncDos"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:width="95dp"
            android:inputType="text"
            android:text="Segundo"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvwEncTres"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:width="95dp"
            android:inputType="text"
            android:text="Tercero"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
